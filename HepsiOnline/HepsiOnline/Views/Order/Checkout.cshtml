@model Order
    <div class="container">
        <h2>Hemen Alışveriş Yap!</h2>
        <p>Lütfen bilgilerinizi girin, ürünlerinizi hemen gönderelim.</p>
        <div asp-validation-summary="All" class="text-danger"></div>

        <form asp-action="Checkout" method="post">
            <h3>Alıcı</h3>
            <div class="form-group">
                <label>Adı:</label><input asp-for="Name" class="form-control" />
            </div>
            <h3>Adresi</h3>
            <div class="form-group">
                <label>Mahalle:</label><input asp-for="Line1" class="form-control" />
            </div>
            <div class="form-group">
                <label>Cadde, Sokak:</label><input asp-for="Line2" class="form-control" />
            </div>
            <div class="form-group">
                <label>Apartman, Kapı No:</label><input asp-for="Line3" class="form-control" />
            </div>
            <div class="form-group">
                <label>İl:</label><input asp-for="City" class="form-control" />
            </div>
            <div class="form-group">
                <label>İlçe:</label><input asp-for="State" class="form-control" />
            </div>
            <div class="form-group">
                <label>Posta Kodu:</label><input asp-for="Zip" class="form-control" />
            </div>
            <div class="form-group">
                <label>Ülke:</label><input asp-for="Country" class="form-control" />
            </div>
            <h3>Seçenekler</h3>
            <div class="checkbox">
                <label>
                    <input asp-for="GiftWrap" /> Ürünleri Hediye Paketi Yap
                </label>
            </div>
            <div class="text-center">
                <input class="btn btn-primary" type="submit" value="Complete Order" />
            </div>
        </form>
    </div>