@model Product


            <div class="card mt-4 w-100">
                <div class="row">
                    <div class="col-md-4">
                        <img class="img-fluid" src="@Model.ImageAdress" alt="Resim..">
                    </div>
                    <div class="col-md-8">
                        <h2 class="card-title mt-2">@Model.Name</h2>
                        <p class="card-text">@Model.Description</p>

                        <div class="text-danger font-weight-bold">@Model.Price.ToString("c")</div>

                        <form class="" id="@Model.ProductID" asp-page="/Cart" method="post">
                            <input type="hidden" asp-for="ProductID" />
                            <input type="hidden" name="returnUrl"
                                   value="@ViewContext.HttpContext.Request.PathAndQuery()" />
                            <button type="submit" class="btn btn-sm btn-outline-secondary mt-2">Sepete Ekle</button>
                        </form>

                    </div>
                </div>
            </div>
